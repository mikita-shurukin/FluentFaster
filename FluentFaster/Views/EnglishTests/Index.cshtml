@model IEnumerable<FluentFaster.Models.GrammarTopic>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="~/css/main-page.css" asp-append-version="true" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Learn Grammar - FluentLab</title>
</head>
<body>
    <div class="lessons">
        <div class="container">
            @if (Model.Any())
            {
                <table class="lessons-table">
                    <tbody>
                        @{
                            int columns = 3;
                            int count = 0;
                        }
                        @foreach (var topic in Model)
                        {
                            if (count % columns == 0)
                            {
                                @:<tr>
                            }
                            <td>
                                <a href="@Url.Action("Test", "EnglishTests", new { id = topic.TopicID })" class="card-link">
                                    <div class="card">
                                        <div class="lesson-title">
                                            @topic.TopicName
                                        </div>
                                    </div>
                                </a>
                            </td>
                            count++;
                            if (count % columns == 0)
                            {
                                @:</tr>
                            }
                        }
                        @if (count % columns != 0)
                        {
                            @:</tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p>No grammar topics available yet.</p>
            }
        </div>
    </div>
</body>
</html>
