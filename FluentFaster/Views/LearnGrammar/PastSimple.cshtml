@model FluentFaster.Models.GrammarTopic

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Past Simple</title>
    <link rel="stylesheet" href="/css/learn-grammar/past-simple.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300..800;1,300..800&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Sour+Gummy:ital,wght@0,100..900;1,100..900&family=Tinos:ital,wght@0,400;0,700;1,400;1,700&display=swap" rel="stylesheet">

    <style>
        .container {
            position: relative;
            width: 100%;
            height: 100vh;
            overflow: hidden;
        }

        .main-page {
            display: flex;
            width: 200%;
            transition: transform 0.5s ease-in-out;
        }

        .left-side, .right-side {
            flex: 1;
            width: 100%;
        }

        .switch-button {
            position: absolute;
            top: 50%;
            right: 10px;
            transform: translateY(-50%);
            background-color: #4b2e83;
            color: white;
            border: none;
            padding: 10px 15px;
            font-size: 20px;
            cursor: pointer;
            border-radius: 50%;
            transition: background 0.3s;
        }

            .switch-button:hover {
                background-color: #7f55b6;
            }

        .modal {
            display: none;
            position: fixed;
            z-index: 1;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            justify-content: center;
            align-items: center;
        }

        .modal-content {
            background-color: white;
            padding: 20px;
            border-radius: 10px;
            width: 80%;
            max-width: 500px;
            text-align: left;
        }

        .close-btn {
            float: right;
            font-size: 24px;
            font-weight: bold;
            cursor: pointer;
        }
    </style>
</head>

<body>
    <div class="container">
        <button class="switch-button" onclick="toggleSide()">&#8594;</button>
        <div class="main-page" id="contentContainer">
            <div class="first-side">
                <div class="title-verbs">
                    Past Simple with regular verbs
                </div>
                <table>
                    <tr class="row1">
                        <td class="first-column">Affirmative</td>
                        <td class="button-box" onclick="showExamples('modal1')">I<br>worked<br>talked<br>helped</td>
                        <td class="button-box" onclick="showExamples('modal2')">HE/SHE/IT<br>worked<br>talked<br>helped</td>
                        <td class="button-box" onclick="showExamples('modal3')">YOU/WE/THEY<br>worked<br>talked<br>helped</td>
                    </tr>
                    <tr class="row2">
                        <td class="first-column">Question</td>
                        <td class="button-box" onclick="showExamples('modal4')"><span>DID</span> I<br>work?<br>talk?<br>help?</td>
                        <td class="button-box" onclick="showExamples('modal5')"><span>DID</span> HE/SHE/IT<br>work?<br>talk?<br>help?</td>
                        <td class="button-box" onclick="showExamples('modal6')"><span>DID</span> YOU/WE/THEY<br>work?<br>talk?<br>help?</td>
                    </tr>
                    <tr class="row3">
                        <td class="first-column">Negative</td>
                        <td class="button-box" onclick="showExamples('modal7')">I <span>DIDN'T</span><br>work<br>talk<br>help</td>
                        <td class="button-box" onclick="showExamples('modal8')">HE/SHE/IT <span>DIDN'T</span><br>work<br>talk<br>help</td>
                        <td class="button-box" onclick="showExamples('modal9')">YOU/WE/THEY <span>DIDN'T</span><br>work<br>talk<br>help</td>
                    </tr>
                </table>
            </div>

            <div class="second-side">
                <div class="title-verbs">
                    Past Simple with irregular verbs
                </div>
                <table>
                    <tr class="row1">
                        <td class="button-box">I<br>went<br>ate<br>drank</td>
                        <td class="button-box">HE/SHE/IT<br>went<br>ate<br>drank</td>
                        <td class="button-box">YOU/WE/THEY<br>went<br>ate<br>drank</td>
                    </tr>
                    <tr class="row2">
                        <td class="button-box"><span>DID</span> I<br>go?<br>eat?<br>drink?</td>
                        <td class="button-box"><span>DID</span> HE/SHE/IT<br>go?<br>eat?<br>drink?</td>
                        <td class="button-box"><span>DID</span> YOU/WE/THEY<br>go?<br>eat?<br>drink?</td>
                    </tr>
                    <tr class="row3">
                        <td class="button-box">I <span>DIDN'T</span><br>go<br>eat<br>drink</td>
                        <td class="button-box">HE/SHE/IT <span>DIDN'T</span><br>go<br>eat<br>drink</td>
                        <td class="button-box">YOU/WE/THEY <span>DIDN'T</span><br>go<br>eat<br>drink</td>
                    </tr>
                </table>
            </div>

            <div class="third-side">
                <div class="title-verbs">
                    Past Simple with "to be" (was/were)
                </div>
                <table>
                    <tr class="row1">
                        <td class="button-box">I/HE/SHE/IT<br>was</td>
                        <td class="button-box">YOU/WE/THEY<br>were</td>
                    </tr>
                    <tr class="row2">
                        <td class="button-box"><span>WAS</span> I/HE/SHE/IT?</td>
                        <td class="button-box"><span>WERE</span> YOU/WE/THEY?</td>
                    </tr>
                    <tr class="row3">
                        <td class="button-box">I/HE/SHE/IT <span>WASN'T</span></td>
                        <td class="button-box">YOU/WE/THEY <span>WEREN'T</span></td>
                    </tr>
                </table>
            </div>
        </div>
    </div>

    <div class="button-container">
        <a href="@Url.Action("TestDetails", "LearnGrammar", new { id = Model.TopicID })" class="btn btn-primary">Start Test</a>
    </div>

    <script>
        function showExamples(modalId) {
            document.getElementById(modalId).style.display = "flex";
        }

        function closeModal(modalId) {
            document.getElementById(modalId).style.display = "none";
        }
    </script>

    <script>
        let currentIndex = 0; 
        function toggleSide() {
            const container = document.getElementById("contentContainer");
            currentIndex = (currentIndex + 1) % 3; 

            container.style.transform = `translateX(-${currentIndex * 33.33}%)`;

            const button = document.querySelector(".switch-button");
            button.innerHTML = currentIndex === 2 ? "&#8592;" : "&#8594;";
        }
    </script>

</body>
</html>
